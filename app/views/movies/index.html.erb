<p id="notice"><%= notice %></p>

<div class="card-deck d-flex flex-row justify-content-center flex-wrap">
  <% @movies.each do |movie| %>
    <div class='card' style="width: 200px;">
      <%= poster(movie) %>
      <div class='card-body'>
        <p class='card-text'>
          <%= movie.title %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<br>
<%= will_paginate @movies %>

<%= link_to 'New Movie', new_movie_path, class: 'btn' %>
